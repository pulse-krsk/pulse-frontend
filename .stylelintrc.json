{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "unit-allowed-list": ["%", "em", "rem", "px", "vh", "vw", "deg", "s", "fr"],
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9]+$",
      {
        "message": "Selector should be camel case",
        "severity": "error"
      }
    ],
    "at-rule-no-unknown": null
  },
  "defaultSeverity": "warning",
  "ignoreFiles": ["./src/shared/styles/overrides.scss"]
}
